<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".fragment.FavoriteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#F4EBEB"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_product_detail">

            <ImageView
                android:id="@+id/imgProduct_item_favorite"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/strawberry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameProduct_item_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Strawberrdddy"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPriceProduct_item_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5/1kg"
                android:textColor="#F60A0A"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgDeleteProduct_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:src="@drawable/icon_delete" />
    </LinearLayout>

</LinearLayout>